<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:padding="18dp"
	android:clickable="true"
	>
	<ScrollView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_marginTop="0dp"
		android:layout_marginRight="0dp"
		android:background="@drawable/frame_pop_menu"
		android:paddingTop=   "8dp"
		android:paddingBottom="10dp"
		>

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<com.knziha.polymer.widgets.TextMenuView
				android:id="@+id/test_child_view"
				style="@style/MenuTextStyle1"
				android:clickable="true"
				android:text="多选模式"
				/>

			<TextView
				style="@style/MenuTextStyle1"
				android:clickable="true"
				android:text="后台打开" />

			<TextView
				style="@style/MenuTextStyle1"
				android:clickable="true"
				android:text="新标签页打开..." />

			<TextView
				style="@style/MenuTextStyle1"
				android:clickable="true"
				android:text="设为默认页" />

			<TextView
				style="@style/MenuTextStyle1"
				android:clickable="true"
				android:text="复制链接" />

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:clickable="true">

				<TextView
					android:id="@+id/menu_icon6"
					style="@style/MenuTextStyle1"
					android:text="编辑" />

				<ImageView
					android:id="@+id/icon_share"
					android:layout_width="40dp"
					android:layout_height="@dimen/_35_"
					android:layout_gravity="end|center_vertical"
					android:layout_marginEnd="10dp"
					android:background="?actionBarItemBackground"
					android:clickable="true"
					android:focusable="true"
					android:paddingStart="8dp"
					android:paddingTop="5dp"
					android:paddingEnd="8dp"
					android:paddingBottom="5dp"
					android:src="@drawable/sync_tabs_close" />
			</FrameLayout>

			<TextView
				style="@style/MenuTextStyle1"
				android:clickable="true"
				android:text="分享" />

		</LinearLayout>
	</ScrollView>
</FrameLayout>