<layout>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/dialog"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/round_corner_bottom_frame"
	android:paddingTop="10dp"
	>
	<LinearLayout
		android:id="@+id/header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="8dp"
		android:layout_marginLeft="8dp"
		android:orientation="horizontal"
		>
		<ImageView
			android:id="@+id/logo"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:textSize="19sp"
			android:singleLine="true"
			android:textColor="@android:color/black"
			android:gravity="center"
			android:src="@mipmap/ic_launcher"
			/>
		<androidx.appcompat.widget.AppCompatEditText
			android:id="@+id/dir_path"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:textColor="#ffffff"
			android:background="@drawable/abc_edit_text_material"
			android:singleLine="true"
			android:minHeight="50dp"
			android:imeOptions="flagNoExtractUi"
			android:textIsSelectable="true"
			android:theme="@style/toolbarBaseTheme"
			android:paddingStart="10dp"
			tools:text="lovecc.mp3"
			/>
		<ImageView
			android:id="@+id/close"
			android:layout_width="35dp"
			android:layout_height="match_parent"
			android:textSize="16sp"
			android:singleLine="true"
			android:textColor="#888"
			android:gravity="center"
			android:padding="5dp"
			android:src="@drawable/ic_baseline_switch"
			android:visibility="invisible"
			/>
	</LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:layout_marginRight="8dp"
		android:layout_marginLeft="8dp"
		android:orientation="horizontal"
		>
		<View
			android:layout_width="50dp"
			android:layout_height="50dp"
			/>

		<LinearLayout
			android:id="@+id/new_folder"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="8dp"
			android:orientation="horizontal"
			android:background="#38E4FFF7"
			android:layout_gravity="center"
			android:clickable="true"
			android:focusable="true">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:src="@mipmap/ic_type_folder"
				android:tint="#fff"
				android:gravity="center"
				/>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:gravity="center"
				android:text="downloads"
				android:textColor="#fff"
				/>

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:src="@drawable/abc_ic_go_search_api_material"
				android:gravity="center"
				/>
		</LinearLayout>
	</LinearLayout>



	<LinearLayout
		android:id="@+id/bottombar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:background="@drawable/toolbardrawable"
		android:paddingStart="8dp"
		android:paddingEnd="8dp"
		>
		<TextView
			android:id="@+id/open"
			android:layout_width="match_parent"
			android:layout_height="65dp"
			android:text="打开已下载文件…"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:drawableLeft="@drawable/ic_baseline_folder_open_solid_gray"
			android:textColor="#666"
			android:textSize="17sp"
			android:drawablePadding="38dp"
			android:gravity="center_vertical"
			android:background="?attr/listChoiceBackgroundIndicator"
			/>
		<TextView
			android:id="@+id/replace"
			android:layout_width="match_parent"
			android:layout_height="65dp"
			android:text="重新下载"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:drawableLeft="@drawable/ic_refresh_24dp"
			android:textColor="#666"
			android:textSize="17sp"
			android:drawablePadding="38dp"
			android:gravity="center_vertical"
			android:background="?attr/listChoiceBackgroundIndicator"
			/>
		<TextView
			android:id="@+id/download"
			android:layout_width="match_parent"
			android:layout_height="65dp"
			tools:text="下载（ 256 KB ）"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:drawableLeft="@drawable/ic_file_download_black_24dp"
			android:textColor="#666"
			android:textSize="17sp"
			android:drawablePadding="38dp"
			android:gravity="center_vertical"
			android:background="?attr/listChoiceBackgroundIndicator"
			/>
		<TextView
			android:id="@+id/abort"
			android:layout_width="match_parent"
			android:layout_height="65dp"
			android:text="取消"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:drawableLeft="@drawable/ic_baseline_close_24"
			android:textColor="#666"
			android:textSize="17sp"
			android:drawablePadding="38dp"
			android:gravity="center_vertical"
			android:background="?attr/listChoiceBackgroundIndicator"
			/>
	</LinearLayout>

</LinearLayout>

</layout>

