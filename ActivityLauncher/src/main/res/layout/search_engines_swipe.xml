<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/search_engines"
	android:layout_width="match_parent"
	android:layout_height="45dp"
	android:orientation="horizontal"
	android:background="#ECAAFFFF"
	android:visibility="gone"
	tools:visibility="visible">
	<TextView
		android:id="@+id/up"
		android:text="上移"
		android:drawableLeft="@drawable/ic_menu_arrow_up_black_24dp"
		style="@style/sch_eng_morpt" />

	<TextView
		android:id="@+id/down"
		android:text="下移"
		android:drawableLeft="@drawable/ic_menu_arrow_down_black_24dp"
		style="@style/sch_eng_morpt"
		/>

	<TextView
		android:id="@+id/edit"
		android:text="修改"
		android:drawableLeft="@drawable/ic_baseline_edit_road_small"
		style="@style/sch_eng_morpt"
		/>

	<TextView
		android:id="@+id/delete"
		android:text="删除"
		android:drawableLeft="@drawable/ic_clear_black_24dp"
		style="@style/sch_eng_morpt"
		/>
</LinearLayout>