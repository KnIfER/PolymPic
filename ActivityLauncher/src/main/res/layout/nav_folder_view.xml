<?xml version="1.0" encoding="utf-8"?><!--androidx.drawerlayout.widget.DrawerLayout  xml version="1.0" encoding="utf-8"?-->
<layout xmlns:tools="http://schemas.android.com/tools">
	<com.knziha.polymer.widgets.LinearFramer xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/root"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:fitsSystemWindows="true">

		<androidx.appcompat.widget.Toolbar
			android:id="@+id/toolbar"
			android:layout_width="match_parent"
			android:layout_height="45dp"
			android:background="#8f8f8f"
			android:paddingTop="2dp"
			/>

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/recycler_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			tools:listitem="@layout/bookmark_item"
			android:background="#fff"
			android:minHeight="180dp"
			android:scrollbarThumbVertical="@color/gray"
			android:scrollbars="vertical"
			/>
	</com.knziha.polymer.widgets.LinearFramer>
</layout>