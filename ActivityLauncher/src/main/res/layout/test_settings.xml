<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:gravity="center"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".TestButtonActivity">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:background="#fff"
		>
		<TextView
			android:text="搜索框"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:paddingStart="2dp"
			android:paddingTop=   "8dp"
			android:paddingBottom="8dp"
			/>
		<com.knziha.polymer.preferences.RadioSwitchButton
			android:id="@+id/radio"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="立即显示输入法"
			android:button="@drawable/radio_selector"
			android:paddingStart="5dp"
			android:paddingTop=   "8dp"
			android:paddingBottom="8dp"
			/>
		<com.knziha.polymer.preferences.RadioSwitchButton
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="自动全选"
			android:button="@drawable/radio_selector"
			android:paddingStart="5dp"
			android:paddingTop=   "8dp"
			android:paddingBottom="8dp"
			/>

		<View
			android:layout_width="match_parent"
			android:layout_height="0dp"
			/>
		<TextView
			android:text="搜索词/历史记录列表"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:paddingStart="2dp"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			/>
		<com.knziha.polymer.preferences.RadioSwitchButton
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="自动展开搜索记录"
			android:button="@drawable/radio_selector"
			android:paddingStart="5dp"
			android:paddingTop=   "8dp"
			android:paddingBottom="8dp"
			/>
		<com.knziha.polymer.preferences.RadioSwitchButton
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="清空文本后，展开搜索记录"
			android:button="@drawable/radio_selector"
			android:paddingStart="5dp"
			android:paddingTop=   "8dp"
			android:paddingBottom="8dp"
			/>
		<com.knziha.polymer.preferences.RadioSwitchButton
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="展开列表时，收起输入法"
			android:button="@drawable/radio_selector"
			android:paddingStart="5dp"
			android:paddingTop=   "8dp"
			android:paddingBottom="8dp"
			/>
		<com.knziha.polymer.preferences.RadioSwitchButton
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="滚动列表时，收起输入法"
			android:button="@drawable/radio_selector"
			android:paddingStart="5dp"
			android:paddingTop=   "8dp"
			android:paddingBottom="8dp"
			/>
		<com.knziha.polymer.preferences.RadioSwitchButton
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="淡入透明背景色"
			android:button="@drawable/radio_selector"
			android:paddingStart="5dp"
			android:paddingTop=   "8dp"
			android:paddingBottom="8dp"
			/>
	</LinearLayout>

</FrameLayout>