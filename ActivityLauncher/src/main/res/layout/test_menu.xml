<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	<ScrollView
		android:layout_width="250dp"
		android:layout_height="wrap_content"
		android:layout_marginTop=  "0dp"
		android:layout_marginRight="0dp"
		android:background="@drawable/frame_menu"
		android:elevation="12dp"
		>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="250dp"
			android:layout_height="wrap_content"
			>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="horizontal"
				>
				<TextView
					android:id="@+id/fresh"
					android:text="恢复"
					style="@style/MenuTextStyleInListHeader"
					android:longClickable="true"
					/>
				<TextView
					android:id="@+id/new_folder"
					android:text="新建标签页"
					style="@style/MenuTextStyleInList"
					/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>
				<TextView
					android:text="关闭"
					style="@style/MenuTextStyleInListHeader"
					android:longClickable="true"
					/>
				<TextView
					android:id="@+id/copy"
					android:text="复制标签页"
					style="@style/MenuTextStyleInList"
					/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>
				<TextView
					android:id="@+id/print"
					android:text="打印"
					style="@style/MenuTextStyleInListHeader"
					/>
				<TextView
					android:id="@+id/offline"
					android:text="离线页面"
					style="@style/MenuTextStyleInList"
					android:longClickable="true"
					/>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>
				<TextView
					android:id="@+id/reinit"
					android:text="崭新"
					style="@style/MenuTextStyleInListHeader"
					android:longClickable="true"
					/>
				<TextView
					android:id="@+id/refresh"
					android:text="刷新页面"
					style="@style/MenuTextStyleInList"
					/>
			</LinearLayout>

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				>
				<TextView
					android:id="@+id/menu_icon6"
					android:text="分享链接"
					android:drawableLeft="@drawable/abc_ic_menu_share_mtrl_alpha"
					style="@style/MenuTextStyle"
					/>
				<ImageView
					android:id="@+id/icon_share"
					android:layout_width="60dp"
					android:layout_height="@dimen/_35_"
					android:layout_gravity="end|center_vertical"
					android:paddingEnd="15dp"
					android:paddingStart="15dp"
					android:paddingTop="5dp"
					android:paddingBottom="5dp"
					android:background="@drawable/surrtrip0"
					android:focusable="true"
					android:clickable="true"
					/>
			</FrameLayout>

			<TextView
				android:id="@+id/menu_icon8"
				android:text="页内查找…"
				android:drawableLeft="@drawable/ic_baseline_find_in_page_24"
				style="@style/MenuTextStyle"
				android:longClickable="true"
				/>

			<TextView
				android:id="@+id/menu_icon9"
				android:text="电脑模式"
				android:drawableLeft="@drawable/ic_baseline_desktop_mode"
				style="@style/MenuTextStyle"
				android:longClickable="true"
				/>

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="添加到："
				android:paddingStart="16dp"
				android:textColor="#3446AA"
				android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
				/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				>
				<TextView
					android:id="@+id/bookmark"
					android:text="书签"
					style="@style/MenuTextStyleSmall"
					/>
				<TextView
					android:id="@+id/mainpage"
					android:text="主页"
					style="@style/MenuTextStyleSmall"
					/>
				<TextView
					android:id="@+id/searchengine"
					android:text="搜索引擎"
					style="@style/MenuTextStyleSmall"
					/>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</FrameLayout>